{
  "name": "rapidflow",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run"
  },
  "devDependencies": {
    "@ariel-salgado/eslint-config": "0.0.10",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.33.0",
    "@fontsource/ubuntu": "^5.2.6",
    "@sveltejs/adapter-netlify": "^5.1.1",
    "@sveltejs/enhanced-img": "^0.8.0",
    "@sveltejs/kit": "^2.30.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.12",
    "@vitest/browser": "^3.2.4",
    "clsx": "^2.1.1",
    "eslint": "^9.33.0",
    "eslint-plugin-better-tailwindcss": "^3.7.4",
    "eslint-plugin-svelte": "^3.11.0",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "phosphor-svelte": "^3.0.1",
    "playwright": "^1.54.2",
    "simple-git-hooks": "^2.13.1",
    "svelte": "^5.38.1",
    "svelte-check": "^4.3.1",
    "svelte-confetti": "^2.3.2",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0",
    "zod": "^4.0.17"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm check"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
